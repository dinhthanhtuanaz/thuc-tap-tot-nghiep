<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TableRow
        android:paddingTop="@dimen/d_5"
        android:paddingBottom="@dimen/d_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_san_pham"
            android:src="@drawable/san_pham"
            android:layout_width="@dimen/d_100"
            android:layout_height="@dimen/d_100" />

        <LinearLayout
            android:orientation="vertical"
            android:paddingLeft="@dimen/d_10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/tv_ten_sp"
                    android:textSize="@dimen/d_18"
                    android:textColor="@color/cGray9"
                    android:text="Iphone 6s plus sịn sò"
                    android:paddingRight="@dimen/d_24"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />
                <ImageView
                    android:id="@+id/iv_dong"
                    android:src="@drawable/ic_close"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_gia_sp"
                android:textSize="@dimen/d_22"
                android:textColor="@color/cRedA4"
                android:layout_marginTop="@dimen/d_10"
                android:text="5,000,000 đ"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
            <TableRow
                android:gravity="center_vertical"
                android:layout_marginTop="@dimen/d_10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_giam"
                    android:src="@drawable/ic_minus"
                    android:background="@color/cGray2"
                    android:padding="@dimen/d_7"
                    android:layout_width="@dimen/d_30"
                    android:layout_height="@dimen/d_30"/>
                <Button
                    android:id="@+id/bt_so_luong"
                    android:text="3"
                    android:textSize="@dimen/d_20"
                    android:background="#65FFFFFF"
                    android:layout_width="@dimen/d_60"
                    android:layout_height="@dimen/d_30"/>
                <ImageView
                    android:id="@+id/iv_tang"
                    android:src="@drawable/ic_plus"
                    android:background="@color/cGray2"
                    android:padding="@dimen/d_7"
                    android:layout_width="@dimen/d_30"
                    android:layout_height="@dimen/d_30"/>
            </TableRow>
        </LinearLayout>
    </TableRow>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/d_2"
        android:background="@color/cGray2"/>
</LinearLayout>